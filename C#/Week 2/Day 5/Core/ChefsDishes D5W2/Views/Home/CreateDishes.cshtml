@model Dish

<div class="text-center">
    <h1>Add a Dish</h1>
    <form asp-action="AddDishes" asp-controller="Home" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
                <div class="form-group">
            <label asp-for="Tastiness"></label>
            <input class="form-control" asp-for="Tastiness">
            <span asp-validation-for="Tastiness" class="text-danger"></span>
        </div>
                <div class="form-group">
            <label asp-for="Calories"></label>
            <input class="form-control" asp-for="Calories">
            <span asp-validation-for="Calories" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label >Chef's name</label>
            <select asp-for="ChefId">
                @foreach (Chef item in ViewBag.Chefs)
                {
                    <option value="@item.ChefId">@item.FirstName</option>
                }
            </select>
        </div>
        <button class="btn btn-dark">Add Dish</button>
    </form>
</div>
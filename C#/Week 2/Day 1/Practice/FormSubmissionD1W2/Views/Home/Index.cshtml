@{
    ViewData["Title"] = "Home Page";
}
@model User

<div class="text-center">
    <h1 class="display-4">Enter Your Information</h1>
    <form asp-action="Create" method="post" asp-controller="Home">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input class="form-control" asp-for="Email">
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Birthday"></label>
            <input class="form-control" asp-for="Birthday">
            <span asp-validation-for="Birthday"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input class="form-control" asp-for="Password">
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="FavNumber"></label>
            <input class="form-control" asp-for="FavNumber">
            <span asp-validation-for="FavNumber"></span>
        </div>

        <button class="btn btn-info w-50">Submit</button>
    </form>
</div>

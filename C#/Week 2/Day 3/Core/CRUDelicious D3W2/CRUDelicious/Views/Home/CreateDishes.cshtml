@model Dishes

<div class="text-center">
    <h1 class="display-4">Add A New Dish</h1>
    <div class="card shadow border-warning p-3">
        <form asp-action="Create" asp-controller="Home" method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chef"></label>
                <input asp-for="Chef" class="form-control">
                <span asp-validation-for="Chef" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tastiness"></label>
                <select class="form-control" asp-for="Tastiness">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <span asp-validation-for="Tastiness" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Calories"></label>
                <input asp-for="Calories" class="form-control text-danger">
                <span asp-validation-for="Calories" class="text-danger"></span>
            </div>

            <button class="btn btn-info">Add Dish</button>
            

        </form>

    </div>
</div>